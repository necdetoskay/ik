@model WSY.Models.HarcamaRaporVM

@{
    ViewBag.Title = "Rapor";
}



@using (Ajax.BeginForm("RaporAl",new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "raporsonuc",
    LoadingElementId = "wait"
}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
 
    
    <div style="display: inline-block">
        @Html.LabelFor(model => model.BaslamaTarih)
        @Html.EditorFor(model => model.BaslamaTarih, new { htmlAttributes = new { @class = "datefield" } })
        @Html.ValidationMessageFor(model => model.BaslamaTarih)
    </div>
    
    <div style="display: inline-block">
        @Html.LabelFor(model => model.BitisTarih)
        @Html.EditorFor(model => model.BitisTarih, new { htmlAttributes = new { @class = "datefield" } })
        @Html.ValidationMessageFor(model => model.BitisTarih)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HarcamaTip)
        @Html.DropDownListFor(model => model.HarcamaTip, (SelectList)ViewBag.harcamaListe, "Harcama tipi seçiniz", new { @class = "form-control " })
        @Html.ValidationMessageFor(model => model.HarcamaTip)
    </div>

    <p>
        <input type="submit" value="Create" />
    </p>
}
<div id="wait" style="display: none;">
    <img src="~/Content/images/ajax-loader.gif" /></div>
<div id="raporsonuc"></div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datepick")
}
