        $(function () {

            $('#yeniekle').ikDialog2({
                formurl: '@Url.Action("YeniPersonel","Personel",new {Area="Admin"})',
                title:'Yeni Personel',
                buttonText:'Kaydet',
                complete:function (result) {
                    console.log(result);
                }
            });



            readytablist();

            $('#selectlist').MakeSelectList({
                loadimgurl: '@Url.Content("~/Content/Loading_icon.gif")',
