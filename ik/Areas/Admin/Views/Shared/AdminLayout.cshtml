@using ik.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - kent Konut A.Ş.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top marginBottom-25" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("I.K. Admin", "Index", "Dashboard", new { area = "Admin" }, new { @class = "navbar-brand" })
            @Html.ActionLink("I.K.", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Görev İşlemleri <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li> @Html.ActionLink("Görev Tanımları", "Index", "Gorev", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay" }.Contains(User.Identity.Name))</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Personel Bilgi", "Index", "PersonelBilgi", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay", @"KENTKONUT\derya.aslan" }.Contains(User.Identity.Name))</li>
                <li>@Html.ActionLink("Özlük ", "Index", "OzlukHome", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay", @"KENTKONUT\derya.aslan" }.Contains(User.Identity.Name))</li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Raporlar <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Çalışan Personel Sayısı", "CalisanSayi", "DashBoard", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay", @"KENTKONUT\derya.aslan" }.Contains(User.Identity.Name))</li>
                        <li>@Html.ActionLink("Personel Yaş Durumları", "PersonelYas", "DashBoard", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay", @"KENTKONUT\derya.aslan" }.Contains(User.Identity.Name))</li>

                    </ul>


                </li>

                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Yetkiler <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Yıllık İzin Görme Yetkileri", "Index", "YillikIzinYetki", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay", @"KENTKONUT\derya.aslan" }.Contains(User.Identity.Name))</li>
                    </ul>
                </li>

                <li>@Html.ActionLink("Personel Özlük Durumu", "Durum", "OzlukHome", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay", @"KENTKONUT\derya.aslan" }.Contains(User.Identity.Name))</li>
                @*<li>@Html.ActionLink("Yıllık İzin Defter Hazırla", "YillikIzinDefter", "OzlukHome", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay", @"KENTKONUT\derya.aslan" }.Contains(User.Identity.Name))</li>*@
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Personel İşlemleri<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li> @Html.ActionLink("Pdks Senkronizasyon", "PdksKontrol", "Personel", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay" }.Contains(User.Identity.Name))</li>
                    </ul>
                </li>
                @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Formlar <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Çalışma Belgesi", "CalismaBelge", "DashBoard", null, new { area = "Admin" }).If(new string[] { @"KENTKONUT\noskay", @"KENTKONUT\derya.aslan" }.Contains(User.Identity.Name))</li>
                        </ul>
                    </li>*@


            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>

    <div class="container body-content" style="margin-top:25px">
        <div id="Info">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/ptakip.js"></script>

    @Html.PageScripts()


    <script type="text/javascript">

  globalnamespace = {
        deleteicon:'@Url.Content("~/Content/delete-png.png")'
    }
    $(document).ready(function () {

            //$('.dropdown-toggle').dropdown();
            $('ul.dropdown-menu [data-toggle=dropdown]').on('click', function (event) {
                event.preventDefault();
                event.stopPropagation();
                $(this).parent().siblings().removeClass('open');
                $(this).parent().toggleClass('open');
            });
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>