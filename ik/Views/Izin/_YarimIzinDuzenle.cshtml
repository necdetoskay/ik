@model ik.Models.Yizin


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.personelid)
        @Html.HiddenFor(model => model.mikrokayit)

        <div class="form-group">
            @Html.LabelFor(model => model.Personel.adsoyad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Personel.adsoyad, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.yil, htmlAttributes: new { @class = "control-label col-md-2" })
