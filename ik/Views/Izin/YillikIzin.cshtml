
@{
    ViewBag.Title = "YillikIzin";
}

<h2>YillikIzin</h2>

<div class="form-group">
    @Html.Label("Personel Ad", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("PersonelListe", (SelectList)ViewBag.personelListe, "Personel Seçiniz..", new { htmlAttributes = new { @class = "form-control datetime" } })

    </div>
</div>


<div class="form-group">
    <table class="table">
        <thead>
            <tr>
                <th>Yıl</th>
                <th>Hakedilen</th>
                <th>Kullanılan</th>
                <th>Kalan</th>
            </tr>
        </thead>
        <tbody id="result"></tbody>
    </table>
    <div class="jumbotron">
        <p id="toplamkalan"></p>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#PersonelListe').on('change', function () {
                var id = $(this).val();
                $.ajax({
                    url: '@Url.Action("PersonelYillikIzinDurum")',
                    data: { personelid: id },
                    type: 'GET',
                    success: function (data) {
                        var izinler = $('#result');
                        izinler.empty();
                        var toplamkalan = 0;
                        for (var i = 0; i < data.length; i++) {
                            var izin = data[i];
                            toplamkalan = toplamkalan + izin.kalan;
                            var ek = "";
                            if (izin.kalan < 1) {
                                ek = ' bgcolor="#ffad99">';
                            } else { ek = ">" }
                            izinler.append("<tr" + ek + "<td>" + izin.yil + "</td>" +
                                "<td>" + izin.hakedilenizin + "</td>" +
                                 "<td>" + izin.kullanilan + "</td>" +
                                  "<td>" + izin.kalan + "</td>" +
                                "</tr>");

                        }
                        $('#toplamkalan').text('Toplam Kalan İzin: ' + toplamkalan);
                    }
                });
            });
        });
    </script>
}





