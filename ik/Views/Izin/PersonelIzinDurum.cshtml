@model IEnumerable<ik.Models.PersonelIzinVM>
@{
    ViewBag.Title = "PersonelIzinDurum";
}

<h2>@ViewBag.adSoyad</h2>

<div class="row">
    <div class="col-md-6">

        <div id="izinListe" class="list-group ">

            @foreach (var yil in Model)
            {
                <a href="#"  data-yil="@yil.IzinYıl" data-izin="@yil.ToplamIzin" class="list-group-item"><span class="badge">@yil.ToplamIzin</span>  @yil.IzinYıl</a>
            }

