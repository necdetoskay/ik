@model IEnumerable<ik.Models.YizinDetay>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.belgesayi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tarih)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.baslangic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bitis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yizin.id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="background-color: @(item.Yizin.mikrokayit?"green":"red")">
        <td>
            @Html.DisplayFor(modelItem => item.belgesayi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tarih)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.baslangic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bitis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Yizin.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Yizin.mikrokayit)
        </td>
    </tr>
}

</table>
