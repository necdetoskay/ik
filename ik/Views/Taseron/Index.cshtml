</div>


        <div class="form-group">
            @Html.Label("Personel Ad Soyad")
            <input type="date" id="tarih"></input>
        </div>
    </div>
   
@section scripts{
    <script type="text/javascript">
        $(function () {






            var select = $('#personelListe');
            $.ajax({
                type: "get",
                data: {},
                url: '@Url.Action("PersonelListe")',
                success: function (personels) {
                    $('#personelListe').empty();
                    $("#personelListe").append('<option value="">Personel Seçiniz</option>');
                 
                    $.each(personels, function (i, personel) {
                        $("#personelListe").append('<option value="' + personel.Value + '">' +
                            personel.Text + '</option>');
                    });
                }
            });
            select.on('change', function () {
                var value = this.value;
                if (value === '')
                    return;

                //formu sıfırla

                //varsa eski izinleri getir.

            });

        });
    </script>
}