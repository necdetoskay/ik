
@{
    ViewBag.Title = "RutinEkle";
}

<h2>Tekrarlı Rutin Ekle</h2>

<div class="form-row">
    <div class="form-group col-md-6">
        <label for="sel1">Tekrar Aralığı:</label>
        <select class="form-control" id="sel1">
            <option value="1">Günlük</option>
            <option value="2">Haftalık</option>
            <option value="3">Aylık</option>
        </select>
    </div>
    <div class="form-group col-md-6">
        <label for="isadi">Yapılacak İş</label>
        <input type="text" class="form-control" id="isadi" placeholder="Yapılacak İş">
    </div>

</div>
<div class="form-row">

    <div class="form-group col-md-4">
        <label for="ilktarih">Son Tarih</label>
        <input id="ilktarih" class="datepicker form-control" data-date-format="dd/mm/yyyy">
    </div>
    <div class="form-group col-md-4">
        <label for="sontarih">Son Tarih</label>
        <input id="sontarih" class="datepicker form-control" data-date-format="dd/mm/yyyy">
    </div>

    <div class="form-group col-md-4">
        <label for="hatirlatma">Hatırlatma</label>
        <input type="number" class="form-control" id="hatirlatma">
    </div>
</div>


@section scripts{
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.tr.js"></script>
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                language: 'tr',
                autoclose:true
            });
        })
    </script>
}

