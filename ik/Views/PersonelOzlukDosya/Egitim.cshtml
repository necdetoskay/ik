@model IEnumerable<ik.Models.OzlukEgitim>

@{
    ViewBag.Title = "Egitim";
}

<h2>Egitim</h2>

<p>
    @Html.ActionLink("Yeni Eğitim Ekle", "EgitimEkle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.egitimKonu) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.egitimVeren)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.egitimSuresi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tarih)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.egitimKonu) <span class="badge badge-secondart">@(item.OzlukEgitimDetays.Count())</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.egitimVeren)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.egitimSuresi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tarih)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detay", "EgitimPersonel", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
