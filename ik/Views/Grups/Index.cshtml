@model IEnumerable<ik.Models.Grup>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.ad, "PersonelGrup", "Grups", new {grupid = item.id}, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {item.id}) |
                @Html.ActionLink("Details", "Details", new {item.id}) |
                @Html.ActionLink("Delete", "Delete", new {item.id})
            </td>
        </tr>
    }

</table>